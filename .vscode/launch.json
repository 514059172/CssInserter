{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch extension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*.js",
                "ignore": "**/node_modules/**"
            }
        }
    ]
}